FROM rust:latest as builder

LABEL maintainer="Hector Morales <hector.morales.carnice@gmail.com>"
LABEL repo-url="https://github.com/alvidir/tp-auth"
LABEL version="alpha"

WORKDIR /usr/src

RUN USER=root cargo new tp-auth
WORKDIR /usr/src/tp-auth
COPY Cargo.toml Cargo.lock ./
RUN cargo build --release

COPY src ./src
COPY proto ./proto
RUN cargo install --path .

######## Start a new stage from scratch #######
FROM alpine:latest  

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /usr/local/cargo/bin/tp-auth .

# Command to run the executable
CMD [ "./tp-auth" ]